<?php

namespace DynamicFormBundle\Entity;

use DynamicFormBundle\Entity\FormElement\FormText;
use Doctrine\Common\Collections\ArrayCollection;
use Doctrine\Common\Collections\Collection;
use Doctrine\ORM\Mapping as ORM;

/**
 * @ORM\Table
 * @ORM\Entity
 *
 * @package DynamicFormBundle\Entity
 */
class DynamicResults
{
    /**
     * @var int
     *
     * @ORM\Id
     * @ORM\Column(type="integer")
     * @ORM\GeneratedValue(strategy="AUTO")
     */
    private $id;

    /**
     * @var Collection|FormField[]
     *
     * @ORM\OneToMany(targetEntity="DynamicFormBundle\Entity\FormValue", mappedBy="form", cascade={"persist", "remove"})
     */
    private $values;

    public function __construct()
    {
        $this->values = new ArrayCollection();
    }

    /**
     * @return integer
     */
    public function getId()
    {
        return $this->id;
    }

    /**
     * @param FormValue $value
     *
     * @return DynamicResults
     */
    public function addValue(FormValue $value)
    {
        $this->values[$value->getFormField()->getName()] = $value;

        return $this;
    }

    /**
     * Remove value
     *
     * @param FormValue $value
     */
    public function removeValue(FormValue $value)
    {
        $this->values->removeElement($value);
    }

    /**
     * @return Collection|FormValue[]
     */
    public function getValues()
    {
        return $this->values;
    }
}
