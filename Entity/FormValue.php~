<?php

namespace DynamicFormBundle\Entity;

use Doctrine\ORM\Mapping as ORM;
use DynamicFormBundle\Entity\Value\BaseValue;

/**
 * @ORM\Table
 * @ORM\Entity
 *
 * @package DynamicFormBundle\Entity
 */
class FormValue
{
    /**
     * @var int
     *
     * @ORM\Id
     * @ORM\Column(type="integer")
     * @ORM\GeneratedValue(strategy="AUTO")
     */
    private $id;

    /**
     * @var FormField
     *
     * @ORM\ManyToOne(targetEntity="DynamicFormBundle\Entity\FormField")
     * @ORM\JoinColumn(name="form_field_id", referencedColumnName="id", nullable=false)
     */
    private $formField;

    /**
     * @var BaseValue
     *
     * @ORM\OneToOne(targetEntity="DynamicFormBundle\Entity\Value\BaseValue")
     * @ORM\JoinColumn(name="value_id", referencedColumnName="id")
     */
    private $value;

    /**
     * @return int
     */
    public function getId()
    {
        return $this->id;
    }

    /**
     * @param FormField $formField
     *
     * @return FormValue
     */
    public function setFormField(FormField $formField)
    {
        $this->formField = $formField;

        return $this;
    }

    /**
     * @return FormField
     */
    public function getFormField()
    {
        return $this->formField;
    }

    /**
     * @param BaseValue $value
     *
     * @return FormValue
     */
    public function setValue(BaseValue $value = null)
    {
        $this->value = $value;

        return $this;
    }

    /**
     * @return BaseValue
     */
    public function getValue()
    {
        return $this->value;
    }
}
