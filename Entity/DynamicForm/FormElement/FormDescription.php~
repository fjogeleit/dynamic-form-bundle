<?php

namespace DynamicFormBundle\Entity\FormElement;

use DynamicFormBundle\Entity\Value\TextValue;
use DynamicFormBundle\FormStatics\FormElements;
use Doctrine\ORM\Mapping as ORM;

/**
 * @ORM\Table(name="form_element_description")
 * @ORM\Entity
 *
 * @package DynamicFormBundle\Entity
 */
class FormDescription extends FormText
{
    /**
     * @param TextValue $text
     *
     * @return FormDescription
     */
    public function setText(TextValue $text)
    {
        $this->text = $text;

        return $this;
    }

    /**
     * @return string
     */
    public function getElementType()
    {
        return FormElements::TEXT;
    }

    /**
     * @return string
     */
    public function getAnchor()
    {
        return sprintf('%s_%s', strtolower(preg_replace('/\B([A-Z])/', '_$1', $this->getElementType())), $this->getId());
    }
}
