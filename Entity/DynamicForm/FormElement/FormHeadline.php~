<?php

namespace DynamicFormBundle\Entity\FormElement;

use DynamicFormBundle\Entity\Value\StringValue;
use DynamicFormBundle\FormStatics\FormElements;
use Doctrine\ORM\Mapping as ORM;

/**
 * @ORM\Entity
 *
 * @package DynamicFormBundle\Entity
 */
class FormHeadline extends FormText
{
    /**
     * @param StringValue $text
     *
     * @return FormHeadline
     */
    public function setText(StringValue $text)
    {
        $this->text = $text;

        return $this;
    }

    /**
     * @return string
     */
    public function getElementType()
    {
        return FormElements::HEADLINE;
    }

    /**
     * @return string
     */
    public function getAnchor()
    {
        return sprintf('%s_%s', strtolower(preg_replace('/\B([A-Z])/', '_$1', $this->getText()->getValue())), $this->getId());
    }
}
