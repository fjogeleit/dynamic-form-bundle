{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
  <div class="row">
    <div class="col-sm-12">
        {{ form_start(form) }}
            {{ form_row(form.name) }}
            {% if form.vars.sortable|length > 0 %}
                <table class="table table-striped table-bordered">
                    {% for sortable in form.vars.sortable %}
                        <tr>
                            <td>
                                {{ form_label(sortable.position, sortable.vars.title) }}
                            </td>
                            <td>
                                {{ form_widget(sortable) }}
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            {% endif %}
            <button type="submit" class="btn btn-primary">Speichern</button>
        {{ form_end(form) }}
    </div>
  </div>
</div>
{% endblock body %}